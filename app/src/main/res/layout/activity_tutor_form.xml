    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/tutorformProgressbar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00bbff"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Tutor Registration Form"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/tutor_img"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_photo_camera_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="Tap to upload your pic" />

            <EditText
                android:id="@+id/Tutor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:padding="15dp" />

            <EditText
                android:id="@+id/Tutor_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp" />

            <EditText
                android:id="@+id/Tutor_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Qualification"
                android:padding="15dp" />

            <EditText
                android:id="@+id/Tutor_aadhar_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aadhar no."
                android:inputType="number"
                android:padding="15dp" />

            <EditText
                android:id="@+id/Tutor_mobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Personal mobile number"
                android:inputType="phone" />


            <Spinner
                android:id="@+id/classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="9dp" />

            <EditText
                android:id="@+id/Tutor_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="subjects you can taught" />

            <TextView
                android:id="@+id/textviewSpecializationid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Your sepcialized subject as a Teacher which you taught to students" />

            <Spinner
                android:id="@+id/Tutor_specialization_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/Tutor_minimumfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimum fee you expect"
                android:padding="15dp" />

            <EditText
                android:id="@+id/Tutor_present_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="present_Address"
                android:inputType="textMultiLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can go to students place or student will come to your place"

                android:textSize="20dp" />

            <Spinner
                android:id="@+id/Tutor_place_tution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/location_tutorform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/Tutor_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Any description about you to attract students "
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/Tutor_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Experience in teaching" />
            <!--            android:id="@+id/Tutor_submitForm"-->
            <Button
                android:id="@+id/Tutor_submitForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#00bbff"
                android:text="Submit"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="hloooooo"
                android:textColor="#ffffff" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>